<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bayaz"
    android:orientation="vertical"
    tools:context=".kayit">

    <LinearLayout
        android:layout_width="407dp"
        android:layout_height="57dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.004">

        <Button
            android:id="@+id/kisi"
            style="@android:style/Widget.DeviceDefault.Button.Borderless"
            android:layout_width="204dp"
            android:layout_height="60dp"
            android:background="#FFEB3B"
            android:text="Kişi bilgileri"
            android:textColor="@android:color/background_dark"
            android:textSize="18sp"
            android:visibility="visible"
            tools:visibility="visible" />

        <Button
            android:id="@+id/ehliyet"
            style="@android:style/Widget.DeviceDefault.Button.Borderless"
            android:layout_width="207dp"
            android:layout_height="60dp"
            android:background="#FFEB3B"
            android:text="ehliyet bilgileri"
            android:textColor="@android:color/background_dark"
            android:textSize="18sp"
            android:visibility="visible"
            tools:visibility="visible" />
    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/contain"
        android:layout_width="match_parent"
        android:layout_height="668dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.454"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <Button
            android:id="@+id/gorunmez_buton3"
            android:layout_width="40dp"
            android:layout_height="35dp"
            android:background="@drawable/bayaz"
            android:drawableTop="@drawable/ic_visibility_off_black_24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.971"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.572" />

        <Button
            android:id="@+id/gorunmez_buton2"
            android:layout_width="40dp"
            android:layout_height="35dp"
            android:background="@drawable/bayaz"
            android:drawableTop="@drawable/ic_visibility_off_black_24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.971"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.465" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="331dp"
            android:layout_height="46dp"
            android:text="Gizlilik Politikasını okudum ve kabul ediyorum."
            android:textColor="@android:color/black"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.768"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.836" />

        <CheckBox
            android:id="@+id/checkbox2"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:textColor="@android:color/background_dark"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.017"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.83" />

        <LinearLayout
            android:layout_width="346dp"
            android:layout_height="392dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.107"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.197">

            <EditText
                android:id="@+id/editText"
                android:layout_width="match_parent"
                android:layout_height="75sp"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Adınız"
                android:textColor="@android:color/darker_gray"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/editText2"
                android:layout_width="match_parent"
                android:layout_height="75sp"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Soyadınız"
                android:textColor="@android:color/darker_gray"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/mail"
                android:layout_width="match_parent"
                android:layout_height="75sp"
                android:ems="10"
                android:inputType="textEmailAddress"
                android:text="E-mail adresiniz"
                android:textColor="@android:color/darker_gray"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="75sp"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Şifreniz"
                android:textColor="@android:color/darker_gray"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/confPassword"
                android:layout_width="match_parent"
                android:layout_height="75sp"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Şifrenizi doğrulayın"
                android:textColor="@android:color/darker_gray"
                android:textSize="20sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Beni Hatırla"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.172"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.739" />

        <CheckBox
            android:id="@+id/checkbox1"
            android:layout_width="64dp"
            android:layout_height="65dp"
            android:textColor="@android:color/background_dark"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.02"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.755" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>